<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textColor="#030f17"
        android:hint="0"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="50dp"/>
    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Clear"
        android:background="#D4E157 "/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4">
    <Button
        android:id="@+id/butone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="1"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/buttwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="2"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="3"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="+"
        android:background="#D4E1"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butfour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="4"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butfive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="5"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butsix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="6"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="-"
        android:background="#D4E157"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butseven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="7"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/buteight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="8"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butnine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="9"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butdivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="/"
        android:background="#D4E1"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butrem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="%"
        android:background="#D4E1"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butzero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="0"
        android:background="#D4E157"
        android:textSize="35dp"
        />
    <Button
        android:id="@+id/butmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="*"
        android:background="#D4E1"
        android:textSize="35dp"/>
    <Button
        android:id="@+id/butequalto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="="
        android:background="#D4E157"
        android:textSize="35dp"/>

    </GridLayout>

</LinearLayout>